  <li class="has-flyout <%= 'active' if @title == 'About Me' %>">
    <a href="/about">About Me</a>
    <a href="#" class="flyout-toggle"><span> </span></a>
    <ul class="flyout">
      <li><a href="/about#education">Education</a></li>
      <li><a href="/about#projects">My Projects</a></li>
      <li><a href="/about#interests">My Interests</a></li>
    </ul>
  </li>

